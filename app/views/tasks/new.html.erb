<%= form_for @task do |f|%>
	<%= f.text_field :desc %>
	<%= f.submit id: 'submit' %>
<% end %>

<script>
$(function(){
	$('#submit').click(function(e){
		//prevents the default behavior of the form, i.e. submitting the form
		e.preventDefault();
		//some action
		
		$.post('/tasks', {desc: 'desc'}, function(data){
			alert('hi');
		});
	});
})
</script>