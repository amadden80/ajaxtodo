= form_for @priority do |f|
  = f.label :name
  = f.text_field :name
  = f.label :color
  / = f.color_field :color
  %input#priority_color{type:'color', name:'priorty[color]'}
  / %input{class:'priority_color minicolors minicolors-theme-default minicolors-swatch-position-left minicolors-swatch-left minicolors-position-default'}
  = f.label :urgency_index
  = f.text_field :urgency_index
  = f.submit id: 'submit'
#list
  %table{class:''}
    %thead
      %tr
        %th
          Name
        %th
          Urgency Index
      %tbody#priority-list
        - @priorities.each do |t|
          %tr.priority{style:'background-color:'+t.color}
            %td
              = t.name
            %td
              = t.urgency_index



= javascript_include_tag'priorities'