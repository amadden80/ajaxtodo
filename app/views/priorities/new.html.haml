= form_for @priority do |f|
  = f.label :name
  = f.text_field :name
  = f.label :color
  = f.text_field :color
  / %input#priority_color{type:'color', name:'priorty[color]'}
  = f.label :urgency_index
  = f.text_field :urgency_index
  = f.submit id: 'submit'
#list
  %table{class:''}
    %thead
      %tr
        %th
          Name
        %th
          Urgency Index
      %tbody#priority-list
        - @priorities.each do |t|
          %tr.priority{style:'background-color:'+t.color}
            %td
              = t.name
            %td
              = t.urgency_index



= javascript_include_tag'priorities'



